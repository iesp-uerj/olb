Package: olb
Type: Package
Title: Functions to Track Legislative Activity in Brazil
Version: 2.0.0
Authors@R: c(
  person("Fernando", "Meireles", role = c("aut", "cre"), email = "fernando.meireles@iesp.uerj.br", comment = c(ORCID = "0000-0002-7027-2058")),
  person(family = "OLB", role = "cph")
